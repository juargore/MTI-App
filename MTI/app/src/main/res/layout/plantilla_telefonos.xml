<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D9D9D9"
        android:layout_below="@+id/layF"
        android:layout_marginTop="5dp"></LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:src="@mipmap/logomti"
            android:id="@+id/ivIcono_Telefonos"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_weight="1.17"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivIcono_Telefonos"
            android:layout_toLeftOf="@+id/ivTelefono_Telefonos">

            <TextView
                android:text="Dependencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDependencia_Telefonos"
                android:textColor="#1C4786"
                android:textSize="24sp" />

            <TextView
                android:text="333 333 3333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNumero_Telefonos"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:src="@mipmap/phone"
            android:id="@+id/ivTelefono_Telefonos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
        android:layout_centerVertical="true" />
    </RelativeLayout>

</RelativeLayout>